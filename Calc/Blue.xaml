<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Name="WindowStyle" x:Key="winStyle" TargetType="Window">

        <Setter Property="Background" Value="#FF81C6FA" />

    </Style>

    <Style x:Name="menuStyle" x:Key="mnStyle" TargetType="Menu">
        <Setter Property="Background" >
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF08156F" Offset="0"/>
                    <GradientStop Color="#FF0F77E2" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>





    </Style>
    <Style x:Name="menuIt" x:Key="Header1" TargetType="Control">


        <Setter Property="Foreground" Value="Black"/>

    </Style>
    <Style x:Name="culIt" x:Key="culcControl" TargetType="Control">
        <Setter Property="Background" Value="#FF81C6FA" />
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="Jokerman"/>
        <Setter Property="FontSize" Value="20"/>



    </Style>
    <Style x:Name="radioStyle" x:Key="radioControl" TargetType="RadioButton">

        <Setter Property="FontFamily" Value="Jokerman"/>


    </Style>

</ResourceDictionary>